.expense-block-date {
    align-self: center;
    padding: 4px 8px 1px 8px;
    display: inline-block;
    background: lightgray;
    color: black;
    text-align: center;
    font-size: 10px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

.expense-block {
    display: flex;
    flex-direction: column;
    -webkit-box-shadow: 0px 2px 20px -15px rgba(0,0,0,0.75);
    -moz-box-shadow: 0px 2px 20px -15px rgba(0,0,0,0.75);
    box-shadow: 0px 2px 20px -15px rgba(0,0,0,0.75);
}

.expense-block-section {
    background: white;
    padding: 10px 20px;
    width: calc(100% - 40px);
    display: flex;
    border-bottom: 1px solid #f5f5f5;
    cursor: pointer;
}

.expense-block-section:hover {
    background: #1f685b11;
}

.expense-block-section-data {
    margin-left: 10px;
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.expense-block-section:first-child {
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

.expense-block-section:last-child {
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom: 0px;
}