.popup-container {
    position: fixed;
    width: 100vw;
    padding-bottom: 20px;
    top: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    z-index: 10;
    display: flex;
    justify-content: space-around;
}

.popup {
    background: white;
    border-radius: 5px;
    width: calc(100% - 70px);
    margin-top: 20px;
    padding: 20px;
}

.popup > .header {
    display: flex;
    justify-content: space-between;
}