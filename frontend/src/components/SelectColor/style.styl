.select-color {
    border: 1px solid lightgray;
    border-radius: 5px;
    padding: 6px;
    display: flex;
}

.select-color > div {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    margin: 3px 4px;
    position: relative;
}

.select-color > .highlight:before {
    content: "";
    position: absolute;
    border: 1px solid gray;
    padding: 12px;
    left: -3px;
    top: -3px;
    border-radius: 50%;
}